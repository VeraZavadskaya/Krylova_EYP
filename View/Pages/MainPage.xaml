<Page x:Class="Krylova_EYP.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Krylova_EYP.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Тесты по дисциплине" FontSize="30" HorizontalAlignment="Center"/>
        <TextBlock Text="Экономика отрасли" Grid.Row="2" FontSize="30" HorizontalAlignment="Center"/>
        <Button Name="TeacherBtn" Content="Преподаватель" Grid.Row="4" FontSize="25" Width="250" Click="TeacherBtn_Click_1"/>
        <Button Name="StudentBtn" Content="Студент" Grid.Row="6" FontSize="25" Width="250" Click="StudentBtn_Click_1"/>
    </Grid>
</Page>
