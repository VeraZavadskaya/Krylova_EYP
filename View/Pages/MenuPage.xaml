<Page x:Class="Krylova_EYP.View.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Krylova_EYP.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <Button Name="AddStudentBtn" Content="Добавить студента" Width="300" Height="40" Click="AddStudentBtn_Click"/>
        <Button Name="AddGroupBtn" Content="Добавить группу" Grid.Row="1" Width="300" Height="40" Click="AddGroupBtn_Click"/>
        <Button Name="LIstStudentBtn" Content="Список студентов с оценками" Grid.Row="2" Width="300" Height="40" Click="LIstStudentBtn_Click"/>
        <Button Name="DeleteStudentBtn" Content="Удалить студента" Grid.Row="3" Width="300" Height="40" Click="DeleteStudentBtn_Click"/>
        <Button Name="ExitBtn" Content="выйти в главное меню" Grid.Row="4" Width="300" Height="40" Click="ExitBtn_Click"/>
    </Grid>
</Page>
