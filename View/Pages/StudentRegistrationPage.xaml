<Page x:Class="Krylova_EYP.View.Pages.StudentRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Krylova_EYP.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="800"
      Title="StudentRegistrationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            
        </Grid.RowDefinitions>
        
        <TextBlock Text="Выберите группу" FontSize="25" HorizontalAlignment="Center"/>
        <ComboBox Name="GroupCmb" Grid.Row="2" Width="250" SelectionChanged="GroupCmb_SelectionChanged"/>
        <TextBlock Text="Выберите студента" Grid.Row="4" FontSize="25" HorizontalAlignment="Center"/>
        <ComboBox Name="StudentCmb" Grid.Row="6" Width="250"/>
        <TextBlock Text="Выберите тест" Grid.Row="8" FontSize="25" HorizontalAlignment="Center"/>
        <ComboBox Name="TestCmb" Grid.Row="10" Width="250"/>
        <Button Name="StartBtn" Content="Начать" Grid.Row="12" Width="200" Click="StartBtn_Click"/>
    </Grid>
</Page>
